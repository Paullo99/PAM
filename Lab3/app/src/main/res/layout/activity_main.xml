<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/firstNumberTextField"
        android:layout_width="246dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Wprowadź pierwszą liczbę"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/secondNumberTextField"
        android:layout_width="245dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Wprowadź drugą liczbę"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="363dp"
        android:layout_height="59dp"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal|fill_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstNumberTextField">

        <Button
            android:id="@+id/addButton"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:backgroundTint="#008C7F"
            android:onClick="add"
            android:text="+"
            android:textSize="20sp" />

        <Button
            android:id="@+id/subtractButton"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16sp"
            android:backgroundTint="#008C7F"
            android:baselineAligned="false"
            android:onClick="sub"
            android:text="-"
            android:textSize="20sp" />

        <Button
            android:id="@+id/mutliplyButton"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:backgroundTint="#008C7F"
            android:onClick="mul"
            android:text="*"
            android:textSize="20sp" />

        <Button
            android:id="@+id/divideButton"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#008C7F"
            android:onClick="div"
            android:text="/"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/equalsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="="
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondNumberTextField" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="TextView"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/equalsTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>